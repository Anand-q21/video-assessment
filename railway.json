{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "php -S 0.0.0.0:$PORT -t public/",
    "healthcheckPath": "/api/docs"
  },
  "environments": {
    "production": {
      "variables": {
        "APP_ENV": "prod",
        "DATABASE_URL": "sqlite:///%kernel.project_dir%/var/data.db",
        "CORS_ALLOW_ORIGIN": "*"
      }
    }
  }
}